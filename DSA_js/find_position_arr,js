let arr=[10,70,20,30,70,40,50,60,70,80,70,90,70];
let value=70;
let index=0;

for (let i=0;i<arr.length;i++){
    if(arr[i]===value){
//        console.log(arr[i]);
        index=i;
        
        console.log(index);
        //break;    //if want to break a loop 

    }
    else{
        console.log('this value was not found');
    }
}
arr.splice(2,1);
console.log(arr);
